{
	"name": "虾米增强插件",
	"description": "虾米增强插件(右键快速搜索歌曲，任意页面右键切歌)",
	"version": "2.0",
	"manifest_version": 2,
	"homepage_url":"http://www.xiami.com/u/2653771",
	"permissions": ["contextMenus"],
	"icons": {
		"16": "icon16x16.png",
		"48": "icon48x48.png",
		"128": "icon128x128.png"
	},
	"background": {
		"scripts":["rightMenuBgScript.js"]
	},
	"content_scripts":[
		{
			"matches":["http://www.xiami.com/play", "http://www.xiami.com/play?*"],
			"js":["playerContentScript.js"]
		},
		{
			"matches":["http://www.xiami.com/search*"],
			"run_at":"document_end",
			"js":["jquery-1.11.3.min.js", "searchContentScript.js"],
			"css":["searchAutoComplate.css"]
		}
	],
	"update_url":"http://xiami-search-right-menu.googlecode.com/svn/update.xml"
}